<%= content_for :title, '博客列表' %>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h1>文章</h1>
      <% @posts.each do |post|
      next if post.title.blank?
      %>
        <div>
          <h5>2015-02-29 <small>分类：闲谈</small></h5>
          <h4><a href="<%= blogs_post_path(post) %>"><%= post.title %></a></h4>
        </div>
      <% end if @posts.length > 0 %>
    </div>
    <div class="col-lg-2">

    </div>
  </div>
</div>
